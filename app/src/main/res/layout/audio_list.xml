<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/audio_list_image"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/artist_list_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="artist"
        app:layout_constraintTop_toBottomOf="@id/audio_list_image"
        app:layout_constraintStart_toStartOf="@id/audio_list_image"
        app:layout_constraintEnd_toEndOf="@id/audio_list_image"/>
    <TextView
        android:id="@+id/title_list_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/audio_list_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="2"/>







</androidx.constraintlayout.widget.ConstraintLayout>